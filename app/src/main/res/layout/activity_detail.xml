<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".DetailActivity">


    <ImageView
        android:id="@+id/gambarIMGview"
        android:layout_width="192dp"
        android:layout_height="200dp"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="false"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/namaTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambarIMGview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Nama tempat"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/isi_namaTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namaTview"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jambukaTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_namaTview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="jam buka "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/isi_jambukaTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jambukaTview"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jamtutupTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_jambukaTview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="jam tutup"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/isi_jamtutupTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jamtutupTview"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/telpnTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_jamtutupTview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Nomor Telephone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/isi_telpnTview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telpnTview"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_panggil"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_telpnTview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Panggil" />

    <ImageView
        android:id="@+id/btnpanggil"
        android:layout_width="match_parent"
        android:layout_below="@id/isi_telpnTview"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_alignParentBottom="true"
        android:background="#FFC107"
        android:layout_height="10dp" />

</RelativeLayout>